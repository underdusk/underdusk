<!DOCTYPE html>
<html>

<head>
	<title>Treebook</title>
	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
</head>





<body>
	<!-- Space shit out, yo. -->
	<div class="container">
		
		<!-- Begin Navigation -->
		<div class="navbar navbar-inverse navbar-fixed-top">
	 		<div class="navbar-inner">
	    			<%= link_to 'Treebook', statuses_path, class: "brand" %>
	    			<ul class="nav">
	      			<li class="active"><%= link_to 'Home', statuses_path %></li>
	      			<li><%= link_to 'New Status', new_status_path %></li>
	      			<li><a href="#">Link</a></li>
	    			</ul>
	  		</div>
		</div>
			
		<!-- Need this for Devise for alerts/errors, but should probably integrate this better later. -->
		<div class="alert alert-info">
			<%= notice %>
		</div>
		<div class="alert alert-error">
	  		<%= alert %>
		</div>
	
		<!-- Render the rest of the page. -->
		<%= yield %>

		
	</div>
</body>
</html>
